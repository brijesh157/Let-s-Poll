<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="750dp"
    android:background="#1E90FF"
    >

    <TextView
        android:id="@+id/txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:text="Please enter your question for polling."
        android:textColor="#000000"
        android:textSize="20sp"
        />

    <EditText
        android:id="@+id/edittxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:hint="Type your question here"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/optiontxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edittxt"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:hint="Type the options here"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/add"
        android:layout_below="@id/optiontxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADD"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        />
    <Button
        android:id="@+id/remove"
        android:layout_below="@id/optiontxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REMOVE"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="150dp"
        />
    <Button
        android:id="@+id/clear"
        android:layout_below="@id/optiontxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CLEAR"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="280dp"
        />

    <Button
        android:id="@+id/savebtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/remove"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="10dp"
        android:text="SAVE"
        />

    <Button
        android:id="@+id/start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtopt"
        android:text="NEXT"
        android:layout_marginLeft="140dp"
        />

    <TextView
        android:id="@+id/txtopt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/savebtn"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="160dp"
        android:text="Options"
        android:textColor="#000000"
        android:textSize="20dp"
        />



    <ListView
        android:id="@+id/listView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@id/txtopt"
        android:choiceMode="multipleChoice" />

</RelativeLayout>

</RelativeLayout>